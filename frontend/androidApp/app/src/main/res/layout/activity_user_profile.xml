<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_contact_profile"

        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_groups_profile">


        <ImageView
            android:id="@+id/activity_user_profile_pen3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:onClick="activity_user_profile_bio_edit_onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_edit_40"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="cyren@iastate.edu"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/phone_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="515-999-9999"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contact_info_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Contact Info"
            android:textColor="@color/dark_red"
            android:textSize="26sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_groups_profile"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="btnUserProfile_groupCard_onClick"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/card_view_interests_profile">


        <TextView
            android:id="@+id/group1_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="Maths"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/group2_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="Dab-N-Drag"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/groups_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Groups"
            android:textColor="@color/dark_red"
            android:textSize="26sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_interests_profile"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="btnUserProfile_interestCard_onClick"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_friends_profile">

        <TextView
            android:id="@+id/interest_1_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="Design"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Interest_2_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="Engineering"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_user_profile_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Interests"
            android:textColor="@color/dark_red"
            android:textSize="26sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_friends_profile"
        android:layout_width="0dp"
        android:layout_height="100sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_top_banner_profile">

        <TextView
            android:id="@+id/friend1_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="May Day"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/friend2_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="30dp"
            android:background="@color/yellow"
            android:fontFamily="@font/racing_sans_one"
            android:text="Cargo Zoom"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/friends_title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Friends"
            android:textColor="@color/dark_red"
            android:textSize="26dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/user_profile_goto_match_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:background="@drawable/login_next_button"
                android:fontFamily="@font/racing_sans_one"
                android:onClick="userProfileGotoMatchUser_onClick"
                android:text="Match User"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_top_banner_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_banner_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"><![CDATA[>





        ]]>

        <TextView
            android:id="@+id/activity_user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/racing_sans_one"
            android:textSize="28sp"
            android:textColor="@color/dark_red"
            android:layout_marginTop="10dp"
            android:paddingLeft="130dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="32dp"
            android:text="Cy Ren" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/user_profile_edit_bio_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/activity_user_profile_pen" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="279dp"
                android:layout_height="76dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/racing_sans_one"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:text="This is a test of the emergency alet system. This is a test. This is a test."
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:id="@+id/profile_picture_profile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pimage4" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/activity_user_profile_pen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:onClick="activity_user_profile_bio_edit_onClick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_edit_40"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_banner_profile"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/icon_person_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnUserProfile_profile_OnClick"
            app:srcCompat="@drawable/ic_baseline_person_50" />

        <ImageView
            android:id="@+id/icon_more_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_baseline_more_vert_50"
            android:onClick="btnUserProfile_settings_OnClick"/>

        <ImageView
            android:id="@+id/icon_house_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:clickable="false"
            android:onClick="btnUserProfile_menu_onClick"
            app:srcCompat="@drawable/ic_baseline_home_50"
            tools:ignore="SpeakableTextPresentCheck" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>