<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_search_people_categories_groups"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_banner_people_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_search_people_categories"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/people_2_category_search_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="27dp"
            android:background="@color/light_red"
            android:fontFamily="@font/racing_sans_one"
            android:text="Dab-N-Drag"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/people_1_category_search_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:background="@color/light_red"
            android:fontFamily="@font/racing_sans_one"
            android:text="Maths"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/interest_search_title_people_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Group Search"
            android:textColor="@color/dark_red"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_search_people_categories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="400dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_banner_people_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_search_people"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/people_2_category_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="111dp"
            android:layout_marginTop="27dp"
            android:background="@color/light_red"
            android:fontFamily="@font/racing_sans_one"
            android:text="Design"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/people_1_category_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="27dp"
            android:background="@color/light_red"
            android:fontFamily="@font/racing_sans_one"
            android:text="Engineering"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/interest_search_title_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="Category Search"
            android:textColor="@color/dark_red"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_search_people"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="600dp"
        app:cardBackgroundColor="@color/light_red"
        app:layout_constraintBottom_toTopOf="@+id/bottom_banner_people_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible">

        <EditText
            android:id="@+id/search_people"
            android:layout_width="254dp"
            android:layout_height="48dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:ems="10"
            android:fontFamily="@font/racing_sans_one"
            android:hint="Search People"
            android:inputType="textPersonName"
            android:text="" />

        <ImageView
            android:id="@+id/icon_search_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/ic_baseline_search_30" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_banner_people_search"
        android:layout_width="0dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/icon_more_search_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_person_50"
            android:onClick="btnUserProfile_settings_onClick"/>

        <ImageView
            android:id="@+id/icon_person_search_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_baseline_more_vert_50"
            android:onClick="btnUserProfile_profile_OnClick"/>

        <ImageView
            android:id="@+id/icon_house_search_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:clickable="false"
            android:onClick="btnUserProfile_menu_onClick"
            app:srcCompat="@drawable/ic_baseline_home_50"
            tools:ignore="SpeakableTextPresentCheck" />
    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_search_people">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Match By:" />

        <RadioButton
            android:id="@+id/radio_searchPeopleType_byClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Class" />

        <RadioButton
            android:id="@+id/radio_searchPeopleType_byMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Major" />

        <RadioButton
            android:id="@+id/radio_searchPeopleType_byCollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="College" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="searchPeopleType_submit_onClick"
            android:text="Search" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>