<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundcolor"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_register_classes_banner"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/setup_account_banner"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Setup Account"
        android:textColor="@color/dark_red"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_register_classes_button_next"
        android:layout_width="416dp"
        android:layout_height="56dp"
        android:background="@drawable/next_back_button_setup"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:onClick="btnRegister_classes_continue_onClick"
        android:text="Next"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activity_register_classes_textview"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="Enrolled Classes"
        android:textColor="#000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.743"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_classes_banner" />

    <Button
        android:id="@+id/activity_register_classes_button_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintEnd_toStartOf="@+id/activity_register_classes_textview"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_classes_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>