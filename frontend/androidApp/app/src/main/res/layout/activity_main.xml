<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/activity_main_todays_highlight"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="@drawable/highlight"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Today's Highlight"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378" />


    <Button
        android:id="@+id/activity_main_butten_login"
        android:layout_width="192sp"
        android:layout_height="57sp"
        android:layout_marginEnd="16sp"
        android:background="@drawable/loginbtn"
        android:fontFamily="@font/racing_sans_one"
        android:onClick="btnLogin_onClick"
        android:text="Login"
        android:textColor="#98012E"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_butten_sign_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/activity_main_butten_sign_up"
        android:layout_width="200sp"
        android:layout_height="57sp"
        android:background="#FFBEBE"
        android:fontFamily="@font/racing_sans_one"
        android:onClick="btnSignUp_onClick"
        android:text="Register"
        android:textColor="#98012E"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/activity_main_buds"
        android:layout_width="162dp"
        android:layout_height="170dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_todays_highlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_cy"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bdsb" />

    <ImageView
        android:id="@+id/activity_main_cy"
        android:layout_width="171dp"
        android:layout_height="259dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_buds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_main_buds"
        app:srcCompat="@drawable/cy2" />

    <TextView
        android:id="@+id/activity_main_group_name"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:background="@drawable/gname"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Maths"
        android:textColor="#98012E"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_todays_highlight" />

    <TextView
        android:id="@+id/activity_main_short_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gname"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="We do maths!"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_group_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_main_picture"
        android:layout_width="0sp"
        android:layout_height="207sp"
        android:background="@drawable/picture"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Picture"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_butten_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>