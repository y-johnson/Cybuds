<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_register_main_banner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/setup_account_banner"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Tap to Join Groups"
        android:textColor="@color/dark_red"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_register_group_button_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/next_back_button_setup"
        android:text="Finish"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>