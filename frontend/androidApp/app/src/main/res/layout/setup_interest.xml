<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor">


    <TextView
        android:id="@+id/activity_register_interest_banner"
        android:layout_width="411dp"
        android:layout_height="69dp"
        android:background="@drawable/setup_account_banner"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Tap to Add Interests"
        android:textColor="@color/dark_red"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/next_back_button_setup"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Next"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_interest_banner">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_1"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_2"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_3"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_4"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_5"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <Button
                        android:id="@+id/activity_register_interest_button_6"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/interest_style"
                        android:fontFamily="@font/racing_sans_one"
                        android:text="Engineering"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>