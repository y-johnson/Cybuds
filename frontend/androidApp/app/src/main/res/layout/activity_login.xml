<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundcolor"
        tools:context=".LoginActivity">

    <EditText
        android:id="@+id/activity_login_email"
        android:layout_width="224dp"
        android:layout_height="63dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:singleLine="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <Button
            android:id="@+id/activity_login_submit"
            android:layout_width="184dp"
            android:layout_height="65dp"
            android:layout_marginTop="144dp"
            android:background="@drawable/login_next_button"
            android:fontFamily="@font/racing_sans_one"
            android:onClick="btnLogin_submit_onClick"
            android:text="Submit"
            android:textColor="#000"

            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_email" />

    <EditText
        android:id="@+id/activity_login_password"
        android:layout_width="224dp"
        android:layout_height="63dp"
        android:background="@drawable/text_box"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_login_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_email" />

    <TextView
            android:id="@+id/activity_login_banner"
            android:layout_width="0dp"
            android:layout_height="148dp"
            android:fontFamily="@font/racing_sans_one"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/dark_red"
            android:textSize="64dp"

            android:background="@drawable/login_register_banner"
            app:layout_constraintBottom_toTopOf="@+id/activity_login_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
