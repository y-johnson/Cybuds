<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundcolor"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_register_personal_info_banner"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/setup_account_banner"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:text="Setup Account"
        android:textColor="@color/dark_red"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_personal_info_first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/activity_register_personal_info_button_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/next_back_button_setup"
        android:fontFamily="@font/racing_sans_one"
        android:gravity="center"
        android:onClick="btnRegister_personalInfo_continue_onClick"
        android:text="Next"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/activity_register_personal_info_first_name"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="FirstName"
        android:inputType="textPersonName|text|textAutoComplete"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_personal_info_button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

    <EditText
        android:id="@+id/activity_register_personal_info_middle_name"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="MiddleName"
        android:inputType="textPersonName|text|textAutoComplete"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_first_name" />

    <EditText
        android:id="@+id/activity_register_personal_info_last_name"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="LastName"
        android:inputType="textPersonName|text|textAutoComplete"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_personal_info_button_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_middle_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/activity_register_personal_info_phone_number"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="PhoneNumber"
        android:inputType="number|text|textAutoComplete|phone"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_last_name" />

    <EditText
        android:id="@+id/activity_register_personal_info_address"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="Address"
        android:inputType="textWebEmailAddress|textAutoComplete|textEmailAddress"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_phone_number" />

    <EditText
        android:id="@+id/activity_register_personal_info_gender"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:gravity=""
        android:hint="Gender"
        android:inputType="text"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_address" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:fontFamily="@font/racing_sans_one"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_personal_info_gender">

        <Spinner
            android:id="@+id/spinner"
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/dark_red"
            android:dropDownWidth="wrap_content"
            android:fontFamily="@font/racing_sans_one"
            android:popupBackground="@drawable/text_box"
            android:spinnerMode="dialog"
            android:theme="@style/SpinnerTheme" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>